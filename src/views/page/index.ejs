	}

	.text-content {
		flex: 1;
		max-width: 50%;
		padding-right: 20px;
	}

	.text-content h3,
	.text-content p {
		margin: 0;
		color: #fff;
	}

	.image-content {
		flex: 1;
		display: flex;
		justify-content: flex-end;
		/* Push the image to the right */
	}

	.image-content img {
		max-width: 100%;
		height: auto;
	}

