<style>
	.swiper-container {
		width: 100%;
		height: 400px;
		position: relative;
	}

	.swiper-slide {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.slide-image {
		position: absolute;
		top: 0;
		left: 0;
