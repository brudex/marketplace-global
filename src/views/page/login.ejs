<main class="main login-page">
	<!-- Start of Page Header -->
	<div class="page-header">
		<div class="container">
			<h1 class="page-title mb-0">User Login</h1>
		</div>
	</div>
	<!-- End of Page Header -->


	<div class="page-content">
		<div class="container">
			<div class="login-popup">
				<div class="tab tab-nav-boxed tab-nav-center tab-nav-underline">

					<div class="tab-content">
						<div class="tab-pane active" id="sign-in">
							<form action="/auth/user/login" method="POST">
								<div class="form-group">
									<label>Email address *</label>
									<input type="text" class="form-control" name="email" id="email" required>
								</div>
								<div class="form-group mb-5">
									<label>Password *</label>
									<input type="password" class="form-control" name="password" id="password" required>
								</div>
								<!-- <div class="form-checkbox d-flex align-items-center">
									<input type="checkbox" class="custom-checkbox" id="remember1" name="remember1" required="">
									<label for="remember1">Remember me</label>
								</div> -->
								<button type="submit" class="btn btn-primary">Sign In</button>
							</form>

							<div class="form-footer mt-3">
								<a href="/auth/user/forgot-password">Forgot your password?</a>
							</div>
							<div class="form-footer mt-3">
								<span>Don't have an account? </span><a href="/auth/user/register">Register</a>
							</div>
							<div class="form-footer mt-3 text-right">
								<a href="/auth/merchant/login">Merchant Login</a>
							</div>
						</div>

					</div>
