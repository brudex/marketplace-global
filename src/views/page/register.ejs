<main class="main login-page">
	<!-- Start of Page Header -->
	<div class="page-header">
		<div class="container">
			<h1 class="page-title mb-0">Sign Up</h1>
		</div>
	</div>
	<!-- End of Page Header -->


	<div class="page-content">
		<div class="container">
			<div class="login-popup">
				<div class="tab tab-nav-boxed tab-nav-center tab-nav-underline">
					<div class="tab-content">
						<div class="tab-pane active" id="sign-up">
							<!-- Add error message display -->
							<% if (error) { %>
								<div class="alert alert-danger" role="alert">
									<%= error %>
								</div>
							<% } %>
							<form action="/auth/user/register" method="POST">

								<div class="form-group mb-5">
									<label>First Name *</label>
									<input type="text" class="form-control" name="firstName" id="first-name" required>
								</div>
								<div class="form-group mb-5">
									<label>Last Name *</label>
									<input type="text" class="form-control" name="lastName" id="last-name" required>
								</div>
								<div class="form-group">
									<label>Email *</label>
									<input type="email" class="form-control" name="email" id="email" required>
								</div>
								<div class="form-group mb-5">
									<label>Password *</label>
									<input type="password" class="form-control" name="password" id="password" required>
								</div>

								<div class="form-group mb-5">
									<label>Confirm Password *</label>
									<input type="password" class="form-control" name="confirmPassword" id="confirmPassword" required>
								</div>



								<div id="customerDiv" style="display: none;">
									<!-- Customer content here -->
								</div>

								<input type="hidden" value="customer" id="type" />

								<div id="sellerDiv" style="display: none;">

 
									<div class="form-group mb-5">
										<label>Phone Number *</label>
										<input type="text" class="form-control" name="phoneNumber" id="phoneNumber">
									</div>

								</div>
								 

								<a href="/auth/merchant/register" class="d-block mb-5 text-primary">Signup as a vendor?</a>
								<div class="form-checkbox d-flex align-items-center justify-content-between mb-5">
									<input type="checkbox" class="custom-checkbox" id="remember" name="remember" required="">
									<label for="remember" class="font-size-md">I agree to the <a href="#"
											class="text-primary font-size-md">privacy policy</a></label>
								</div>
								<button type="submit" class="btn btn-primary">Sign Up</button>
							</form>
						</div>
					</div>
					<p class="text-center">Already a user ? <a href="/auth/user/login" class="text-primary"> Sign In</a></p>

					<!-- <p class="text-center">Sign in with social account</p>
					<div class="social-icons social-icon-border-color d-flex justify-content-center">
						<a href="#" class="social-icon social-facebook w-icon-facebook"></a>
						<a href="#" class="social-icon social-twitter w-icon-twitter"></a>
						<a href="#" class="social-icon social-google fab fa-google"></a>
					</div> -->
				</div>
			</div>
		</div>
	</div>
</main>


<script>
	document.addEventListener("DOMContentLoaded", function () {
		const customerRadio = document.getElementById("check-customer");
		const sellerRadio = document.getElementById("check-seller");
		const customerDiv = document.getElementById("customerDiv");
		const sellerDiv = document.getElementById("sellerDiv");

		customerRadio.addEventListener("change", function () {
			if (customerRadio.checked) {
				customerDiv.style.display = "block";
				sellerDiv.style.display = "none";

				document.getElementById("shop-name").required = false
				document.getElementById("phone-number").required = false
				document.getElementById("type").value = "customer"
			}
		});

		sellerRadio.addEventListener("change", function () {
			if (sellerRadio.checked) {
				sellerDiv.style.display = "block";
				customerDiv.style.display = "none";
				document.getElementById("type").value = "merchant"

				document.getElementById("shop-name").required = true
				document.getElementById("phone-number").required = true
			}
		});
	});

</script>
