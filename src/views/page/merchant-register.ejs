<main class="main login-page">
    <!-- Start of Page Header -->
    <div class="page-header">
        <div class="container">
            <h1 class="page-title mb-0">Merchant Sign Up</h1>
        </div>
    </div>
    <!-- End of Page Header -->

    <div class="page-content">
        <div class="container">
            <div class="login-popup">
                <div class="tab tab-nav-boxed tab-nav-center tab-nav-underline">
                    <div class="tab-content">
                        <div class="tab-pane active" id="merchant-sign-up">
                            <% if (messages.error) { %>
                                <div class="alert alert-danger">
                                    <%= messages.error %>
                                </div>
                            <% } %>

                            <% if (messages.success) { %>
                                <div class="alert alert-success">
                                    <%= messages.success %>
                                </div>
                            <% } %>

                            <form action="/auth/merchant/register" method="POST">
                                <div class="form-group mb-5">
                                    <label>First Name *</label>
                                    <input type="text" class="form-control" name="firstName" id="first-name" required>
                                </div>
                                <div class="form-group mb-5">
                                    <label>Last Name *</label>
                                    <input type="text" class="form-control" name="lastName" id="last-name" required>
                                </div>
                              
                                <div class="form-group mb-5">
                                    <label>Shop Name *</label>
                                    <input type="text" class="form-control" name="shopName" id="shop-name" required>
                                </div>
                                <div class="form-group mb-5">
                                    <label>Description *</label>
                                    <input type="text" class="form-control" name="description" id="description" required>
                                </div>
                                <div class="form-group mb-5">
                                    <label>Zone *</label>
                                    <select class="form-control" name="zoneUuid" id="zoneUuid" required>
                                        <option value="">Select Zone</option>
                                        <% marketZones.forEach(zone => { %>
                                            <option value="<%= zone.uuid %>"><%= zone.name %></option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="form-group mb-5">
                                    <label>Shop Category *</label>
                                    <select class="form-control" name="shopCategoryUuid" id="shopCategoryUuid" required>
                                        <option value="">Select Shop Category</option>
                                        <% shopCategories.forEach(category => { %>
                                            <option value="<%= category.uuid %>"><%= category.name %></option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Email *</label>
                                    <input type="email" class="form-control" name="email" id="email" required>
                                </div>
                                <div class="form-group mb-5">
                                    <label>Phone Number *</label>
                                    <input type="text" class="form-control" name="phoneNumber" id="phone-number" required>
                                </div>
                                <div class="form-group mb-5">
                                    <label>Password *</label>
                                    <input type="password" class="form-control" name="password" id="password" required>
                                </div>
                                <div class="form-group mb-5">
                                    <label>Confirm Password *</label>
                                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" required>
                                </div>
                                <input type="hidden" name="type" value="merchant" />
                                <div class="form-checkbox d-flex align-items-center justify-content-between mb-5">
                                    <input type="checkbox" class="custom-checkbox" id="agree" name="agree" required="">
                                    <label for="agree" class="font-size-md">I agree to the <a href="#" class="text-primary font-size-md">privacy policy</a> and <a href="#" class="text-primary font-size-md">terms of service</a></label>
                                </div>
                                <button type="submit" class="btn btn-primary">Sign Up </button>
                            </form>
                        </div>
                    </div>
                    <p class="text-center">Already a merchant ? <a href="/auth/merchant/login" class="text-primary">Merchant Sign In</a></p>
                </div>
            </div>
        </div>
    </div>
</main>
